<div class="container">
  <div class="img-container">
    <img class="img-circle" src="./content/images/circle.png" alt="Circle Border" width="155" height="155">
    <img class="img-logo-top" src="./content/images/logo.png" alt="Survey MKR Logo" class="w3-image" width="150"
      height="150">
  </div>
  <div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12 container-login">

      <div class="login" id="contentArea">
        <!-- <h1 class="display-4">Login</h1> -->
        <!-- Message Area -->
        <% if(messages.length> 0) { %>
          <div id="messageArea" class="alert alert-danger">
            <%= messages %>
          </div>
          <% } %>

            <div class="login-form">
              <form method="POST" id="loginForm" novalidate>

                <div class="form-group mb-2 group-field">
                  <div>
                    <i class="fa fa-user icon-login">
                    </i>
                    <label>Username:</label>
                  </div>
                  <div class="input-group username-group">

                    <input type="text" class="form-control username-input" id="username" name="username" required
                      value="" placeholder="Username">
                  </div>
                </div>

                <div class="form-group mb-2 group-field">
                  <i class="fa fa-lock">
                  </i>
                  <label>Password:</label>
                  <div class="input-group input-group3">
                    <input type="password" class="form-control text-field" id="password" name="password" required
                      value="" placeholder="Password">
                  </div>
                </div>
                <p class="text-center text-muted small register-message">
                  Don't have an account?
                  <a class="link register-message" href="/register">Register Here!</a>
                </p>
                <div class="text-end button-group">
                  <button id="loginButton" type="submit" class="btn btn-primary btn-lg btns">
                    Login
                  </button>
                  <button id="cancelButton" type="reset" class="btn btn-warning btn-lg btns">
                    Cancel
                  </button>
                </div>
              </form>
            </div>
      </div>
    </div>
  </div>
</div>