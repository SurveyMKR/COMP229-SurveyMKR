<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            
                <form class="form" method="POST">
                    <input type="hidden" name="id" value="<%= survey._id %>" >
                    <div class="form-group">
                        <label for="questionTextField">Question</label>
                        <input type="text" class="form-control"
                        id="questionTextField"
                        placeholder="Enter your Question"
                        name="question" 
                        value="<%= survey.question %>"
                        required>
                    </div>

                    <div class="form-group">
                        <label for="answer1TextField">Answer 1</label>
                        <input type="number" class="form-control"
                        id="abswer1TextField"
                        placeholder="Enter Answer 1"
                        name="answer1" 
                        value="<%= survey.answer1 %>"
                        required>
                    </div>

                    <div class="form-group">
                        <label for="answer2TextField">Answer 2</label>
                        <input type="text" class="form-control"
                        id="answer2TextField"
                        placeholder="Enter Answer 2"
                        name="answer2" 
                        value="<%= survey.answer2 %>"
                        required>
                    </div>

                    <div class="form-group">
                        <label for="answer3TextArea">Answer 3</label>
                        <input type="text" class="form-control"
                        id="answer3TextArea"
                        placeholder="Enter Answer 3"
                        name="answer3"                     
                        value="<%= survey.answer3 %>"
                        required
                        >
                        </input>
                    </div>

                    <div class="form-group">
                        <label for="answer4TextField">Answer 4</label>
                        <input type="number" class="form-control"
                        id="answer4TextField"
                        placeholder="Enter Answer4"
                        name="answer4" 
                        value="<%= survey.answer4 %>"
                        required>
                    </div>

                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> Submit</button>
                    
                        <a href="/survey-list" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel</a>

                </form>
            </div>

        </div>
    </div>    