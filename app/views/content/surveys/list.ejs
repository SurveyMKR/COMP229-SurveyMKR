<div class="container">
    <h1>Choose Survey</h1>
    <% if(displayName) { %>
    <a href="/survey-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Create a Survey</a>
    <% } %>

    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Survey Name</th>
                        <th scope="col">Survey Type</th>
                        <th scope="col">Total Questions</th>
    
                        <% if(displayName) { %>
                        <th></th>
                        <th></th>
                        <% } %>
                    </tr>
                </thead>
                <tbody id="surveyList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < surveys.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= surveys[count].name %></td>
                            <td><%= surveys[count].type %></td>
                            <td><%= surveys[count].questions.length %></td>
                            
                            <% if(displayName) { %>
                            
                            <td class="text-center col-1">
                                <a href="/survey-edit/<%= surveys[count]._id + '/' + surveys[count].type + '/' + surveys[count].questions.length %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            
                            <td class="text-center col-1">
                                <a href="/survey-delete/<%= surveys[count]._id %>"
                                    class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>

                            <% } %> 
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

